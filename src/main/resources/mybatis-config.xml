<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!-- 데이터베이스의 언더스코어(_)로 구분된 컬럼명을 Java의 카멜케이스(camelCase) 필드명에 자동으로 매핑 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <mappers>
        <mapper resource="mybatis/mappers/board.xml"/>
        <mapper resource="mybatis/mappers/recall.xml"/>
        <mapper resource="mybatis/mappers/page.xml"/>
        <mapper resource="mybatis/mappers/complain.xml"/>
        <mapper resource="mybatis/mappers/admin.xml"/>
        <mapper resource="mybatis/mappers/carRecall.xml"/>
        <mapper resource="mybatis/mappers/faq.xml"/>
        <mapper resource="mybatis/mappers/notice.xml"/>
        <mapper resource="mybatis/mappers/stats.xml"/>
        <!-- 결함 신고 및 이미지 관련 매퍼 -->
        <mapper resource="mybatis/mappers/defect_report.xml"/>
        <mapper resource="mybatis/mappers/defect_image.xml"/>
        <mapper resource="mybatis/mappers/upload.xml"/>
    </mappers>
</configuration>