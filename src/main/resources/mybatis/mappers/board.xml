<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.BoardDAO">

    <!-- 글쓰기 -->
    <insert id="write" parameterType="hashmap">
        INSERT INTO RECALL_BOARD (
        BOARD_NO, BOARD_TITLE, BOARD_CONTENT, BOARD_NAME
        ) VALUES (
        RECALL_BOARD_SEQ.NEXTVAL,
        #{boardTitle},
        #{boardContent},
        #{boardName}
        )
    </insert>

    <!-- 글 수정 -->
    <update id="modify" parameterType="hashmap">
        UPDATE RECALL_BOARD
        SET
        BOARD_TITLE = #{boardTitle},
        BOARD_CONTENT = #{boardContent}
        WHERE BOARD_NO = #{boardNo}
    </update>


    <delete id="delete" parameterType="hashmap">
        DELETE FROM RECALL_BOARD
        WHERE BOARD_NO = #{boardNo}
    </delete>


    <select id="contentView" parameterType="hashmap" resultType="com.boot.dto.BoardDTO">
        SELECT *
        FROM RECALL_BOARD
        WHERE BOARD_NO = #{boardNo}
    </select>

</mapper>