<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.CarRecallDAO">

    <resultMap id="carRecallResultMap" type="com.boot.dto.CarRecallDTO">
            <result property="report_id" column="report_id"/>
            <result property="reporter_name" column="reporter_name"/>
           <result property="reporter_phone" column="reporter_phone"/>
            <result property="car_reg_num" column="car_reg_num"/>
            <result property="car_model" column="car_model"/>
            <result property="defect_detail" column="defect_detail"/>
           <result property="is_public" column="is_public"/>
            <result property="reviewed" column="reviewed"/>
            <result property="reported_at" column="reported_at"/>
     </resultMap>
    <select id="findById" parameterType="long" resultMap="carRecallResultMap">
        SELECT
            report_id,
            reporter_name,
            reporter_phone,
            car_reg_num,
            car_model,
            defect_detail,
            is_reviewed as reviewed,
            TO_CHAR(reported_at, 'YYYY-MM-DD HH24:MI') as reported_at
        FROM CAR_RECALL WHERE report_id = #{report_id}
    </select>

    <update id="updateReviewStatus">
        UPDATE CAR_RECALL SET is_reviewed = #{reviewed, javaType=boolean, jdbcType=NUMERIC}
        WHERE report_id = #{report_id}
    </update>
</mapper>