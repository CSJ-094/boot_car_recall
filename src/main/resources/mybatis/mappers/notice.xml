<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.NoticeDAO">

    <!-- NoticeDTO의 필드와 RECALL_NOTICE_DB 컬럼을 매핑하기 위한 resultMap 정의 -->
    <resultMap id="NoticeDTOMap" type="com.boot.dto.NoticeDTO">
        <id property="noticeId" column="NOTICE_ID"/>
        <result property="title" column="TITLE"/>
        <result property="content" column="CONTENT"/>
        <result property="isUrgent" column="IS_URGENT"/>
        <!-- DB 컬럼명이 CREATED_AT, UPDATED_AT으로 변경됨 -->
        <result property="createdAt" column="CREATED_AT"/> 
        <result property="updatedAt" column="UPDATED_AT"/>
        <result property="views" column="VIEWS"/>
        <result property="formattedDate" column="FORMATTED_DATE"/>
    </resultMap>

    <!-- 공지사항 목록 조회 (list) -->
    <select id="list" resultMap="NoticeDTOMap">
        SELECT 
            NOTICE_ID, 
            TITLE, 
            CONTENT, 
            VIEWS, 
            IS_URGENT,
            CREATED_AT,  <!-- REGDATE 대신 CREATED_AT 사용 -->
            UPDATED_AT,
            TO_CHAR(CREATED_AT, 'YYYY-MM-DD HH24:MI:SS') AS FORMATTED_DATE
        FROM RECALL_NOTICE_DB
        ORDER BY IS_URGENT DESC, NOTICE_ID DESC
    </select>
    
    <!-- 조회수 증가 (upViews) -->
    <update id="upViews">
        UPDATE RECALL_NOTICE_DB <!-- NOTICE 테이블을 RECALL_NOTICE_DB로 변경 -->
        SET VIEWS = VIEWS + 1 
        WHERE NOTICE_ID = #{noticeId}
    </update>
    
    <!-- 상세 내용 조회 (contentView) -->
    <select id="contentView" resultMap="NoticeDTOMap">
        SELECT 
            NOTICE_ID, 
            TITLE, 
            CONTENT, 
            VIEWS, 
            IS_URGENT,
            CREATED_AT,  <!-- REGDATE 대신 CREATED_AT 사용 -->
            UPDATED_AT,
            TO_CHAR(CREATED_AT, 'YYYY-MM-DD HH24:MI:SS') AS FORMATTED_DATE
        FROM RECALL_NOTICE_DB 
        WHERE NOTICE_ID = #{noticeId}
    </select>
    
    <!-- 공지사항 작성 (write) -->
    <insert id="write" parameterType="com.boot.dto.NoticeDTO">
        INSERT INTO RECALL_NOTICE_DB ( <!-- 테이블 이름 변경 -->
            NOTICE_ID, 
            TITLE, 
            CONTENT, 
            IS_URGENT
            <!-- WRITER 컬럼 제거 -->
        ) 
        VALUES (
            RECALL_NOTICE_SEQ.NEXTVAL,  <!-- 시퀀스 이름 변경 -->
            #{title}, 
            #{content}, 
            #{isUrgent, jdbcType=CHAR}
            <!-- #{writer} 파라미터 제거 -->
        )
    </insert>
    
    <!-- 공지사항 수정 (modify) -->
    <update id="modify" parameterType="com.boot.dto.NoticeDTO">
        UPDATE RECALL_NOTICE_DB <!-- 테이블 이름 변경 -->
        SET 
            TITLE = #{title}, 
            CONTENT = #{content}, 
            IS_URGENT = #{isUrgent, jdbcType=CHAR},
            UPDATED_AT = SYSDATE <!-- 최종 수정 일시 추가 -->
            <!-- WRITER 관련 내용 제거 -->
        WHERE NOTICE_ID = #{noticeId}
    </update>
    
    <!-- 공지사항 삭제 (delete) -->
    <delete id="delete">
        DELETE FROM RECALL_NOTICE_DB 
        WHERE NOTICE_ID = #{noticeId}
    </delete>

